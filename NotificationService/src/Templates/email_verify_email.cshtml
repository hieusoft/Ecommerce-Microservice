@model dynamic
@{
    Layout = "_Layout.cshtml";
}

<div class="content-box">
 
    <div class="verification-box">
        <p style="margin-bottom: 20px; font-size: 16px; color: #666;">
            Hello <strong>@Model.Name</strong>,<br><br>
            Thank you for registering with Bloom & Blossom. To complete your registration and start enjoying our services, please verify your email address by clicking the button below:
        </p>

        <div style="text-align: center; margin: 30px 0;">
            <a href="@Model.Token" class="btn" style="font-size: 18px; padding: 18px 40px;">
                Verify Email Address
            </a>
        </div>

        <p style="color: #888; font-size: 14px; margin-top: 20px;">
            This verification link will expire in 24 hours.
        </p>
    </div>

    <div class="instructions">
        <h3 style="color: #BA68C8; margin-bottom: 15px;">Need Help?</h3>
        <p style="margin: 5px 0; color: #666;">
            If the button doesn't work, copy and paste this link into your browser:
        </p>
        <p style="margin: 10px 0; background: white; padding: 12px; border-radius: 6px; word-break: break-all; font-size: 14px; color: #BA68C8;">
            @Model.Token
        </p>
        <p style="margin: 5px 0; color: #666;">
            If you didn't create an account with Bloom & Blossom, please ignore this email.
        </p>
    </div>

    <p style="margin-top: 30px;">
        Best regards,<br>
        <strong>The Bloom & Blossom Team</strong>
    </p>
</div>