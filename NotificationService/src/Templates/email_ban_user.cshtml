@model dynamic
@{
    Layout = "_Layout.cshtml";
}

<div class="content-box">

    <div class="verification-box">

        <p style="margin-bottom: 20px; font-size: 16px; color: #5a4a42;">
            Hello <strong style="color: #D4A017;">@Model.Name</strong>,<br><br>
            We are writing to inform you that your <strong style="color: #C17900;">Java Florit</strong> account has been temporarily suspended due to a violation of our terms of service.
        </p>

        <p style="margin-bottom: 20px; font-size: 16px; color: #5a4a42;">
            Please review our community guidelines and contact our support team if you believe this was a mistake.
        </p>

        <div style="text-align: center; margin: 30px 0;">
            <a href="@Model.SupportLink" class="btn"
               style="font-size: 18px; padding: 18px 40px; color: #5D4037;">
                Contact Support
            </a>
        </div>
    </div>

    <div class="instructions"
         style="margin-top: 30px; padding: 20px; background: #FFFDF5;
                border-radius: 10px; border: 1px solid #FFECB3;">

        <h3 style="color: #C17900; margin-bottom: 15px; font-size: 18px; font-weight: 600;">
            What You Can Do
        </h3>

        <ul style="margin: 10px 0; color: #5a4a42; padding-left: 20px; line-height: 1.6;">
            <li>Read the Java Florit community guidelines carefully</li>
            <li>Contact support if you think the suspension was a mistake</li>
            <li>Wait for the review process to complete</li>
        </ul>

        <p style="margin-top: 20px; color: #5a4a42;">
            Please note: repeated violations may result in a permanent ban.
        </p>
    </div>

    <p style="margin-top: 30px; padding-top: 10px; border-top: 1px solid #FFECB3; color: #5a4a42;">
        Best regards,<br>
        <strong style="color: #C17900; font-weight: 600;">The Java Florit Team</strong>
    </p>
</div>
