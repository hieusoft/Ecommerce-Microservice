@model dynamic
@{
    Layout = "_Layout.cshtml";
}
<div class="content-box">

    <div class="verification-box">

        <p>
            Hello <strong>@Model.UserName</strong>,<br><br>
            We are writing to inform you that your <strong>Java Florit</strong> account has been temporarily suspended due to a violation of our terms of service.
        </p>

        <p>
            Please review our community guidelines and contact our support team if you believe this was a mistake.
        </p>

        <div style="text-align: center; margin: 20px 0;">
            <a href="@Model.Token" class="btn" style="padding: 12px 30px; display:inline-block; background:#FFD54F; color:#5D4037; text-decoration:none; border-radius:6px;">
                Contact Support
            </a>
        </div>
    </div>

    <div class="instructions" style="margin-top: 20px; padding: 15px; background:#FFFDF5; border-radius:6px; border:1px solid #FFECB3;">
        <h3 style="color:#C17900; margin-bottom:10px;">What You Can Do</h3>

        <ul style="margin:10px 0; padding-left:20px; line-height:1.6; color:#5a4a42;">
            <li>Read the Java Florit community guidelines carefully</li>
            <li>Contact support if you think the suspension was a mistake</li>
            <li>Wait for the review process to complete</li>
        </ul>

        <p>Please note: repeated violations may result in a permanent ban.</p>
    </div>

    <p style="margin-top:20px; border-top:1px solid #FFECB3; padding-top:10px;">
        Best regards,<br>
        <strong style="color:#C17900;">The Java Florit Team</strong>
    </p>
</div>
