@model dynamic
@{
    Layout = "_Layout.cshtml";
}

<div class="content-box">
    <div class="verification-box">
        <p style="margin-bottom: 20px; font-size: 16px; color: #666;">
            Hello <strong>@Model.Name</strong>,<br><br>
            Thank you for your order! Your payment has been successfully processed.
        </p>

        <div style="text-align: center; margin: 30px 0;">
            <a href="@Model.OrderLink" class="btn" style="font-size: 18px; padding: 18px 40px;">
                View Order Details
            </a>
        </div>
    </div>

    <div class="instructions">
        <h3 style="color: #BA68C8; margin-bottom: 15px;">Order Information</h3>

        <p style="margin: 5px 0; color: #666;">
            <strong>Order Number:</strong> @Model.OrderNumber
        </p>

        <p style="margin: 5px 0; color: #666;">
            <strong>Order Date:</strong> @Model.OrderDate
        </p>

        <p style="margin: 5px 0; color: #666;">
            <strong>Total Amount:</strong> @Model.TotalAmount
        </p>

        <p style="margin: 20px 0; color: #666;">
            You will receive a separate email with shipping confirmation and tracking information once your order is on its way.
        </p>
    </div>

    <p style="margin-top: 30px;">
        Thank you for shopping with us!<br>
        <strong>The Bloom & Blossom Team</strong>
    </p>
</div>