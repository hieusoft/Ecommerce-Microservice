@model dynamic
@{
    Layout = "_Layout.cshtml";
}
<div class="content-box">

    <div class="verification-box">
        <p>
            Hello <strong>@Model.UserName</strong>,<br><br>
            You recently requested to reset your password for your Java Florit account.
            Click the button below to create a new password:
        </p>

        <div style="text-align: center; margin: 20px 0;">
            <a href="@Model.Token" class="btn" style="padding: 12px 30px; display:inline-block; background:#FFD54F; color:#5D4037; text-decoration:none; border-radius:6px;">
                Reset Password
            </a>
        </div>

        <p style="font-size: 14px; color:#666;">
            This password reset link will expire in 1 hour for security reasons.
        </p>
    </div>

    <div class="instructions" style="margin-top: 20px; padding: 15px; background:#FFFDF5; border-radius:6px; border:1px solid #FFECB3;">
        <h3 style="color:#C17900; margin-bottom:10px;">Important Security Information</h3>

        <p>If the button doesn't work, copy and paste this link into your browser:</p>

        <p style="background:#FFF9E6; padding:8px; border-radius:4px; word-break:break-all; font-size:14px; color:#B77E00; border:1px solid #FFECB3;">
            @Model.Token
        </p>

        <p>
            <strong>Note:</strong> If you didn't request this password reset, please ignore this email.
            Your account remains secure.
        </p>

        <p>For your security, we recommend:</p>

        <ul style="margin:10px 0; padding-left:20px; line-height:1.6;">
            <li>Create a strong, unique password</li>
            <li>Don't reuse passwords from other websites</li>
            <li>Enable two-factor authentication if available</li>
        </ul>
    </div>

    <p style="margin-top:20px; border-top:1px solid #FFECB3; padding-top:10px;">
        Best regards,<br>
        <strong style="color:#C17900;">The Java Florit Team</strong>
    </p>
</div>
