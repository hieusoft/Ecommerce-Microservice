@model dynamic
@{
    Layout = "_Layout.cshtml";
}

<div class="content-box">

    <div class="verification-box">
        <p style="margin-bottom: 20px; font-size: 16px; color: #5a4a42;">
            Hello <strong style="color: #D4A017;">@Model.UserName</strong>,<br><br>
            You recently requested to reset your password for your Java Florit account.
            Click the button below to create a new password:
        </p>

        <div style="text-align: center; margin: 30px 0;">
            <a href="@Model.Token" class="btn" style="font-size: 18px; padding: 18px 40px; color: #5D4037;">
                Reset Password
            </a>
        </div>

        <p style="color: #A1887F; font-size: 14px; margin-top: 20px; font-style: italic;">
            This password reset link will expire in 1 hour for security reasons.
        </p>
    </div>

    <div class="instructions"
         style="margin-top: 30px; padding: 20px; background: #FFFDF5; border-radius: 10px; border: 1px solid #FFECB3;">

        <h3 style="color: #C17900; margin-bottom: 15px; font-size: 18px; font-weight: 600;">
            Important Security Information
        </h3>

        <p style="margin: 5px 0; color: #5a4a42;">
            If the button doesn't work, copy and paste this link into your browser:
        </p>

        <p style="margin: 10px 0; background: #FFF9E6; padding: 12px; border-radius: 6px;
                  word-break: break-all; font-size: 14px; color: #B77E00; border: 1px solid #FFECB3;">
            @Model.Token
        </p>

        <p style="margin: 10px 0; color: #5a4a42;">
            <strong>Note:</strong> If you didn't request this password reset, please ignore this email.
            Your account remains secure.
        </p>

        <p style="margin: 10px 0; color: #5a4a42;">
            For your security, we recommend:
        </p>

        <ul style="margin: 10px 0; color: #5a4a42; padding-left: 20px; line-height: 1.6;">
            <li>Create a strong, unique password</li>
            <li>Don't reuse passwords from other websites</li>
            <li>Enable two-factor authentication if available</li>
        </ul>
    </div>

    <p style="margin-top: 30px; padding-top: 10px; border-top: 1px solid #FFECB3; color: #5a4a42;">
        Best regards,<br>
        <strong style="color: #C17900; font-weight: 600;">The Java Florit Team</strong>
    </p>
</div>
