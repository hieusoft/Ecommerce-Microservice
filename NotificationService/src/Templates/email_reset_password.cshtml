@model dynamic
@{
    Layout = "_Layout.cshtml";
}

<div class="content-box">
  

    <div class="verification-box">
        <p style="margin-bottom: 20px; font-size: 16px; color: #666;">
            <Hello <strong>@Model.Name</strong>,<br><br>
            You recently requested to reset your password for your Bloom & Blossom account. Click the button below to create a new password:
        </p>

        <div style="text-align: center; margin: 30px 0;">
            <a href="@Model.Token" class="btn" style="font-size: 18px; padding: 18px 40px;">
                Reset Password
            </a>
        </div>

        <p style="color: #888; font-size: 14px; margin-top: 20px;">
            This password reset link will expire in 1 hour for security reasons.
        </p>
    </div>

    <div class="instructions">
        <h3 style="color: #BA68C8; margin-bottom: 15px;">Important Security Information</h3>
        <p style="margin: 5px 0; color: #666;">
            If the button doesn't work, copy and paste this link into your browser:
        </p>
        <p style="margin: 10px 0; background: white; padding: 12px; border-radius: 6px; word-break: break-all; font-size: 14px; color: #BA68C8;">
            @Model.Token
        </p>
        <p style="margin: 5px 0; color: #666;">
            <strong>Note:</strong> If you didn't request this password reset, please ignore this email. Your account remains secure.
        </p>
        <p style="margin: 5px 0; color: #666;">
            For security purposes, we recommend:
        </p>
        <ul style="margin: 10px 0; color: #666; padding-left: 20px;">
            <li>Create a strong, unique password</li>
            <li>Don't reuse passwords from other sites</li>
            <li>Enable two-factor authentication if available</li>
        </ul>
    </div>

  

    <p style="margin-top: 30px;">
        Best regards,<br>
        <strong>The Bloom & Blossom Team</strong>
    </p>
</div>