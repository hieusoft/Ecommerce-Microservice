@model dynamic
@{
    Layout = "_Layout.cshtml";
}

<div class="content-box">

    <div class="verification-box">
       

        <p style="margin-bottom: 20px; font-size: 16px; color: #666;">
            Hello <strong>@Model.Name</strong>,<br><br>
            This email is to confirm that the password for your <strong>Bloom & Blossom</strong> account has been successfully changed.
        </p>

        <div style="text-align: center; margin: 30px 0;">
            <a href="@Model.Token" class="btn" style="font-size: 18px; padding: 18px 40px;">
                Login to Account
            </a>
        </div>
    </div>

    <div class="instructions">
        <h3 style="color: #BA68C8; margin-bottom: 15px;">Security Alert</h3>

        <p style="margin: 5px 0; color: #666;">
            If you <strong>did not</strong> make this change, please contact our support team immediately to secure your account.
        </p>

        <p style="margin: 20px 0; color: #666;">
            For your security, you will receive this notification whenever your password is changed.
        </p>
    </div>

    <p style="margin-top: 30px;">
        Best regards,<br>
        <strong>The Bloom & Blossom Team</strong>
    </p>
</div>