@model dynamic
@{
    Layout = "_Layout.cshtml";
}
<div class="content-box">

    <div class="verification-box">

        <p>
            Hello <strong>@Model.UserName</strong>,<br><br>
            This email is to confirm that the password for your
            <strong>Java Florit</strong> account has been successfully changed.
        </p>

        <div style="text-align: center; margin: 20px 0;">
            <a href="@Model.Token" class="btn" style="padding: 12px 30px; display:inline-block; background:#FFD54F; color:#5D4037; text-decoration:none; border-radius:6px;">
                Login to Account
            </a>
        </div>
    </div>

    <div class="instructions" style="margin-top: 20px; padding: 15px; background:#FFFDF5; border-radius:6px; border:1px solid #FFECB3;">
        <h3 style="color:#C17900; margin-bottom:10px;">Security Alert</h3>

        <p>If you <strong>did not</strong> make this change, please contact our support team immediately to secure your account.</p>

        <p>For your security, you will receive this notification whenever your password is changed.</p>
    </div>

    <p style="margin-top:20px; border-top:1px solid #FFECB3; padding-top:10px;">
        Best regards,<br>
        <strong style="color:#C17900;">The Java Florit Team</strong>
    </p>
</div>
