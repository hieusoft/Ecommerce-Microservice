@model dynamic
@{
    Layout = "_Layout.cshtml";
}

<div class="content-box">

    <div class="verification-box">

        <p style="margin-bottom: 20px; font-size: 16px; color: #5a4a42;">
            Hello <strong style="color: #D4A017;">@Model.UserName</strong>,<br><br>
            This email is to confirm that the password for your
            <strong style="color: #C17900;">Java Florit</strong> account has been successfully changed.
        </p>

        <div style="text-align: center; margin: 30px 0;">
            <a href="@Model.Token" class="btn"
               style="font-size: 18px; padding: 18px 40px; color: #5D4037;">
                Login to Account
            </a>
        </div>
    </div>

    <div class="instructions"
         style="margin-top: 30px; padding: 20px; background: #FFFDF5;
                border-radius: 10px; border: 1px solid #FFECB3;">

        <h3 style="color: #C17900; margin-bottom: 15px; font-size: 18px; font-weight: 600;">
            Security Alert
        </h3>

        <p style="margin: 5px 0; color: #5a4a42;">
            If you <strong>did not</strong> make this change, please contact our support team
            immediately to secure your account.
        </p>

        <p style="margin: 20px 0; color: #5a4a42;">
            For your security, you will receive this notification whenever your password is changed.
        </p>
    </div>

    <p style="margin-top: 30px; padding-top: 10px; border-top: 1px solid #FFECB3; color: #5a4a42;">
        Best regards,<br>
        <strong style="color: #C17900; font-weight: 600;">The Java Florit Team</strong>
    </p>
</div>
